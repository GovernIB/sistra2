<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:jee="http://www.springframework.org/schema/jee"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-4.3.xsd
		http://www.springframework.org/schema/jee
		http://www.springframework.org/schema/jee/spring-jee-4.3.xsd">

	<context:annotation-config />
	<context:component-scan base-package="es.caib.sistra2.stt.core.service" />

	<!--  Acceso a EJB que nos permite acceder a contexto -->
	<jee:local-slsb
			id="contextService"
			jndi-name="java:global/stt/stt-core/ContextServiceBean!es.caib.sistra2.stt.core.api.service.ContextService"
			business-interface="es.caib.sistra2.stt.core.api.service.ContextService"/>
		 
</beans>
