<?xml version="1.0" encoding="UTF-8"?>
<beans	xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:jee="http://www.springframework.org/schema/jee"
		xsi:schemaLocation="
				http://www.springframework.org/schema/beans
				http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
				http://www.springframework.org/schema/jee
				http://www.springframework.org/schema/jee/spring-jee-4.3.xsd">

	<!--

		MAPEAR EJBs COMO BEANS DE SPRING (AUTOWIRED).

		DESDE JSF SE HAN USADO DIRECTAMENTE LAS ANOTICACIONES DE JSF:
			@ManagedBean
			@ViewScoped
		Y EL ENLACE A LOS SERVICES DIRECTAMENTE A LOS EJB CON @Inject


		EN CASO DE "RECONVERTIR" A UNA APLICACIÓN SIN USAR EJBS, QUE SEA PURAMENTE SPRING DEBERIA FUNCIONAR AÑADIENDO LA ANOTACION @Component PARA QUE
		RECONOCIERA LAS ANOTACIONES DE SPRING:
			@Component
			@ManagedBean
			@ViewScoped
		Y DE ESTA FORMA USAR DIRECTAMENTE LOS SERVICES DE SPRING CON @AutoWired
		(HABRIA TAMBIEN QUE RETOCAR LA PARTE DE SEGURIDAD EN EL CORE PARA ELIMINAR LA CAPA EJB Y TRASLADAR LAS ANOTICACIONES DE SEGURIDAD A LOS SERVICES DE SPRING.

	 -->



	<!-- JBoss 5
	<jee:local-slsb
			id="ejemploService"
			jndi-name="sistrages/EjemploServiceBean/local"
			business-interface="es.caib.sistrages.core.api.service.EjemploService"/>
 	-->

	<!-- JBoss 7 -->
	<jee:local-slsb
			id="systemService"
			jndi-name="java:app/sistrages-core/SystemServiceBean"
			business-interface="es.caib.sistrages.core.api.service.SystemService"/>

	<jee:local-slsb
			id="restApiService"
			jndi-name="java:app/sistrages-core/RestApiInternaServiceBean"
			business-interface="es.caib.sistrages.core.api.service.RestApiInternaService"/>


</beans>
