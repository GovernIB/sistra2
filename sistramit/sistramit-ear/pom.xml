<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>es.caib.sistra2</groupId>
		<artifactId>sistramit</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>
	<artifactId>sistramit-ear</artifactId>
	<packaging>ear</packaging>
	<name>sistramit-ear</name>
	<dependencies>
		<dependency>
			<groupId>es.caib.sistra2</groupId>
			<artifactId>sistramit-lib</artifactId>
			<version>${sistramit.version}</version>
			<type>pom</type>
		</dependency>
		<dependency>
			<groupId>es.caib.sistra2</groupId>
			<artifactId>sistramit-core</artifactId>
			<version>${sistramit.version}</version>
			<type>ejb</type>
		</dependency>
		<dependency>
			<groupId>es.caib.sistra2</groupId>
			<artifactId>sistramit-frontend</artifactId>
			<version>${sistramit.version}</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>es.caib.sistra2</groupId>
			<artifactId>sistramit-rest-ws</artifactId>
			<version>${sistramit.version}</version>
			<type>war</type>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<version>${maven.ear.version}</version>
				<configuration>
					<finalName>sistramit</finalName>
					<version>5</version>
					<modules>
						<ejbModule>
							<groupId>es.caib.sistra2</groupId>
							<artifactId>sistramit-core</artifactId>
							<bundleFileName>sistramit-core.jar</bundleFileName>
						</ejbModule>
						<webModule>
							<groupId>es.caib.sistra2</groupId>
							<artifactId>sistramit-frontend</artifactId>
							<contextRoot>/sistramit</contextRoot>
							<bundleFileName>sistramit-frontend.war</bundleFileName>
						</webModule>
						<webModule>
							<groupId>es.caib.sistra2</groupId>
							<artifactId>sistramit-rest-ws</artifactId>
							<contextRoot>/sistramit/rest</contextRoot>
							<bundleFileName>sistramit-rest.war</bundleFileName>
						</webModule>
					</modules>
					<defaultLibBundleDir>lib/</defaultLibBundleDir>
					<skinnyWars>true</skinnyWars>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>${maven.compiler.version}</version>
				<configuration>
					<source>${java.version}</source>
					<target>${java.version}</target>
					<compilerVersion>${java.version}</compilerVersion>
					<encoding>${project.build.sourceEncoding}</encoding>
				</configuration>
			</plugin>
		</plugins>
		<finalName>sistramit</finalName>
	</build>
</project>