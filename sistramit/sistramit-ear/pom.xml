<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>es.caib.sistra2</groupId>
		<artifactId>sistramit</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>
	<artifactId>sistramit-ear</artifactId>
	<packaging>ear</packaging>
	<name>sistramit-ear</name>
	<dependencies>

		<!-- Librerias comunes -->
		<dependency>
			<groupId>es.caib.sistra2</groupId>
			<artifactId>sistramit-lib</artifactId>
			<version>${sistra2.version}</version>
			<type>pom</type>
		</dependency>

		<!--  Core -->
		<dependency>
			<groupId>es.caib.sistra2</groupId>
			<artifactId>sistramit-core</artifactId>
			<version>${sistra2.version}</version>
			<type>ejb</type>
		</dependency>

		<!-- Modulos web -->
		<dependency>
			<groupId>es.caib.sistra2</groupId>
			<artifactId>sistramit-frontend</artifactId>
			<version>${sistra2.version}</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>es.caib.sistra2</groupId>
			<artifactId>sistramit-rest-ws</artifactId>
			<version>${sistra2.version}</version>
			<type>war</type>
		</dependency>

	</dependencies>
	<build>
		<plugins>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<version>${maven.ear.version}</version>
				<configuration>
					<finalName>sistramit</finalName>
					<version>5</version>
					<modules>
						<ejbModule>
							<groupId>es.caib.sistra2</groupId>
							<artifactId>sistramit-core</artifactId>
							<bundleFileName>sistramit-core.jar</bundleFileName>
						</ejbModule>
						<webModule>
							<groupId>es.caib.sistra2</groupId>
							<artifactId>sistramit-frontend</artifactId>
							<contextRoot>/sistramitfront</contextRoot>
							<bundleFileName>sistramit-frontend.war</bundleFileName>
						</webModule>
						<webModule>
							<groupId>es.caib.sistra2</groupId>
							<artifactId>sistramit-rest-ws</artifactId>
							<contextRoot>/sistramit/api</contextRoot>
							<bundleFileName>sistramit-rest.war</bundleFileName>
						</webModule>
					</modules>
					<defaultLibBundleDir>lib/</defaultLibBundleDir>

					<skinnyWars>true</skinnyWars>

					<!-- Anyadir dependencia Hibernate de JBoss en MANIFEST -->
					<archive>
					    <manifestEntries>
					        <Dependencies>org.hibernate</Dependencies>
					    </manifestEntries>
					</archive>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>${maven.compiler.version}</version>
				<configuration>
					<source>${java.version}</source>
					<target>${java.version}</target>
					<compilerVersion>${java.version}</compilerVersion>
					<encoding>${project.build.sourceEncoding}</encoding>
				</configuration>
			</plugin>
		</plugins>
		<finalName>sistramit</finalName>
	</build>
</project>